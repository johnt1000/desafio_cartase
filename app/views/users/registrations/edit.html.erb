<h2>Meu Perfil</h2>
<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "col s12") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.label :email %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= f.label :password %> <i>(deixe em branco se você não quiser muda)</i>
        <% if @minimum_password_length %>
          <span class="helper-text" data-error="wrong" data-success="right">
            (mínimo de <%= @minimum_password_length %> caracteres)
          </span>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <%= f.label :password_confirmation %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :current_password, autocomplete: "current-password" %>
        <%= f.label :current_password %> <i>(Precisamos da sua senha atual para confirmar suas alterações)</i>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          Enviar solicitação <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  <% end %>
</div>

<h3>Cancelar minha conta</h3>

<p>Infeliz? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Confirma a ação?" }, method: :delete, class: "btn red waves-effect waves-light" %></p>
