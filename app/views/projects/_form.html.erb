<div class="row">
  <%= form_with(model: project, local: true, html: { multipart: true }, class: "col s12") do |form| %>
    
    <div class="row">
      <div class="input-field col s12"> 
        <% if project.errors.any? %>
          <div id="error_explanation">
            <h5 class="red-text">
              <%= pluralize(project.errors.count, "erros") %> encontrado(s).
            </h5>
            <ul>
            <% project.errors.full_messages.each do |message| %>
              <li class="red-text"><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">  
        <%= form.text_field :title %>
        <%= form.label :title %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.text_area :descripton %>
        <%= form.label :descripton %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= form.label :goal %>
        <%= form.text_field :goal %>
      </div>
    </div>    

    <div class="row">
      <div class="file-field input-field col s12">
        <div class="btn">
          <span>Imagem</span>
          <%= form.file_field :image %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="input-field col s12">
        <%= form.submit class: "btn waves-effect waves-light" %>
      </div>
    </div>
  <% end %>
</div>
