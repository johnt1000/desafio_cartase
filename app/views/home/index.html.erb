<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <br><br>
    <h1 class="header center orange-text">Traga seu projeto criativo ao mundo</h1>
    <div class="row center">
      <%= link_to 'Comece sua campanha', new_user_session_path, id: "download-button",  class:"btn-large waves-effect waves-light orange" %>
    </div>
    <br><br>
  </div>
</div>
<!--   Icon Section   -->
<div class="row">
  <% @projects.each do |project| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src="<%= project.image.thumb.url %>">
          <span class="card-title"><%= project.title %></span>
        </div>
        <div class="card-content">
          <%= project.descripton %>
        </div>
        <div class="card-action">
          <%= link_to 'Mais detalhes', project %>
        </div>
      </div>
    </div>
  <% end %>
</div>